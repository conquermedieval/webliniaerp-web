li.dropdown(ng-controller="AlertasController")
	a.dropdown-toggle(data-toggle="dropdown" href="#")
		i.fa.fa-bell.fa-lg
		span.notification-label.bounceIn.animation-delay6(ng-if="alertas.length > 0"){{ alertas.length }}
	ul.dropdown-menu.notification.dropdown-3(style="width:300px;")
		li(ng-if="alertas.length == 0")
			a(href="#") Você não tem novos alertas
		li(ng-if="alertas.length > 0")
			a(href="#") Você tem {{ alertas.length }} {{ alertas.length > 1 && 'novas alertas' || 'nova alerta' }}
		li(ng-repeat="item in alertas")
			a(href="{{ item.link }}")
				span.notification-icon.bg-{{item.type}}
					i(ng-class="{'fa fa-warning': item.type == 'warning', 'fa fa-flash': item.type == 'danger'}")
				span.m-left-xs(style="white-space: normal;") {{ item.messege}}
				// span.time.text-muted{{ item.time }}
		// li(ng-if="alertas.length > 0")
			a(href="#") Ver todas as alertas